<Application x:Class="LottoNumber.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Color palette (names unchanged) -->
        <Color x:Key="C.BG">#9D9DA3</Color>
        <Color x:Key="C.Card">#787D88</Color>
        <Color x:Key="C.CardBorder">#535962</Color>
        <Color x:Key="C.FG">#0F1115</Color>
        <Color x:Key="C.FGSub">#3E4450</Color>
        <Color x:Key="C.Primary">#4F67D2</Color>
        <Color x:Key="C.Warn">#D9A441</Color>
        <Color x:Key="C.Danger">#C26A6A</Color>

        <!-- Brushes (names unchanged) -->
        <SolidColorBrush x:Key="App.Background" Color="{StaticResource C.BG}"/>
        <SolidColorBrush x:Key="App.Card" Color="{StaticResource C.Card}"/>
        <SolidColorBrush x:Key="App.CardBorder" Color="{StaticResource C.CardBorder}"/>
        <SolidColorBrush x:Key="App.FG" Color="{StaticResource C.FG}"/>
        <SolidColorBrush x:Key="App.FGSub" Color="{StaticResource C.FGSub}"/>
        <SolidColorBrush x:Key="App.Primary" Color="{StaticResource C.Primary}"/>
        <SolidColorBrush x:Key="App.Warn" Color="{StaticResource C.Warn}"/>
        <SolidColorBrush x:Key="App.Danger" Color="{StaticResource C.Danger}"/>

        <!-- 기본 폰트 -->
        <Style TargetType="{x:Type TextElement}">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="{x:Type Control}">
            <Setter Property="Foreground" Value="{DynamicResource App.FG}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Application.Resources>



</Application>
